/* pages/profile/profile.wxss */
.profile-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20px;
}

.user-card {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  padding: 40px 20px 30px;
  display: flex;
  align-items: center;
  gap: 20px;
  color: #fff;
}

.user-avatar {
  position: relative;
}

.avatar-image {
  width: 80px;
  height: 80px;
  border-radius: 40px;
  border: 3px solid rgba(255, 255, 255, 0.3);
}

.level-badge {
  position: absolute;
  bottom: -5px;
  right: -5px;
  background: #FF9800;
  color: #fff;
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 10px;
  font-weight: 500;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 24px;
  font-weight: 600;
  display: block;
  margin-bottom: 4px;
}

.user-title {
  font-size: 14px;
  opacity: 0.9;
  display: block;
  margin-bottom: 16px;
}

.user-stats {
  display: flex;
  gap: 20px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 18px;
  font-weight: 600;
  display: block;
}

.stat-label {
  font-size: 12px;
  opacity: 0.8;
  margin-top: 2px;
}

.achievements-section {
  background: #fff;
  margin: 20px;
  border-radius: 12px;
  padding: 20px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.section-count {
  font-size: 14px;
  color: #666;
}

.section-more {
  font-size: 14px;
  color: #4CAF50;
}

.achievements-scroll {
  white-space: nowrap;
}

.achievement-item {
  display: inline-block;
  text-align: center;
  margin-right: 16px;
  width: 60px;
}

.achievement-item.locked {
  opacity: 0.3;
}

.achievement-icon {
  width: 48px;
  height: 48px;
  border-radius: 24px;
  margin-bottom: 8px;
}

.achievement-title {
  font-size: 12px;
  color: #666;
  line-height: 1.2;
  display: block;
}

.menu-section {
  background: #fff;
  margin: 0 20px 20px;
  border-radius: 12px;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 24px;
  height: 24px;
  margin-right: 16px;
}

.menu-icon image {
  width: 100%;
  height: 100%;
}

.menu-title {
  flex: 1;
  font-size: 16px;
  color: #333;
}

.menu-arrow {
  font-size: 16px;
  color: #ccc;
}

.stats-section {
  background: #fff;
  margin: 0 20px 20px;
  border-radius: 12px;
  padding: 20px;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
}

.stats-card {
  text-align: center;
  padding: 16px;
  background: #f8f9fa;
  border-radius: 8px;
}

.stats-value {
  font-size: 24px;
  font-weight: 600;
  color: #4CAF50;
  display: block;
  margin-bottom: 4px;
}

.stats-label {
  font-size: 14px;
  color: #666;
}

.recent-section {
  background: #fff;
  margin: 0 20px;
  border-radius: 12px;
  padding: 20px;
}

.recent-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.recent-item {
  display: flex;
  align-items: center;
  gap: 12px;
}

.recent-image {
  width: 48px;
  height: 48px;
  border-radius: 8px;
}

.recent-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.recent-name {
  font-size: 14px;
  color: #333;
  font-weight: 500;
}

.recent-time {
  font-size: 12px;
  color: #999;
}

.recent-score {
  font-size: 14px;
  color: #4CAF50;
  font-weight: 600;
}