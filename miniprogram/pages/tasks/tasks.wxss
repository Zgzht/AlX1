/* tasks.wxss */
.container {
  padding: 32rpx 32rpx 200rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 任务统计 */
.task-stats {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: white;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: white !important;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 任务分类 */
.task-categories {
  margin-top: 32rpx;
  padding: 0;
}

.category-tabs {
  white-space: nowrap;
  padding: 32rpx;
}

.category-tab {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 32rpx;
  margin-right: 32rpx;
  border-radius: 16rpx;
  background: #f8f9fa;
  position: relative;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.category-tab.active {
  background: #4CAF50;
  color: white;
}

.category-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
}

.category-name {
  font-size: 24rpx;
  font-weight: 500;
}

.category-tab.active .category-name {
  color: white;
}

.category-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: #ff4444;
  color: white;
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 任务列表 */
.task-list {
  margin-top: 32rpx;
}

.task-section {
  margin-bottom: 48rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
}

/* 任务项 */
.task-item {
  margin-bottom: 24rpx;
}

.task-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.task-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.task-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 24rpx;
  border-radius: 32rpx;
  background: #f0f8f0;
  padding: 12rpx;
}

.task-details {
  flex: 1;
}

.task-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.task-description {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 16rpx;
}

.task-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #4CAF50;
  font-weight: 500;
  min-width: 80rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50 0%, #8BC34A 100%);
  transition: width 0.3s ease;
}

/* 任务奖励 */
.task-reward {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 24rpx;
}

.reward-score {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 12rpx;
}

.task-btn {
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  border: none;
  min-width: 120rpx;
}

.task-btn.ready {
  background: #4CAF50;
  color: white;
}

.task-btn.completed {
  background: #e0e0e0;
  color: #999;
}

.task-btn.disabled {
  background: #f5f5f5;
  color: #ccc;
}

/* 成就任务 */
.achievement-item {
  margin-bottom: 32rpx;
}

.achievement-content {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.achievement-icon-container {
  position: relative;
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  padding: 16rpx;
}

.achievement-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #4CAF50;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge-icon {
  width: 20rpx;
  height: 20rpx;
}

.achievement-info {
  flex: 1;
}

.achievement-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.achievement-description {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.achievement-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.achievement-reward {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.reward-label {
  font-size: 24rpx;
  color: #666;
}

.reward-title {
  font-size: 24rpx;
  color: #FF9800;
  font-weight: 500;
}

.achievement-btn {
  padding: 20rpx 40rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  border: none;
  min-width: 140rpx;
  align-self: flex-start;
}

/* 任务提示 */
.task-tips {
  margin-top: 32rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #f0f8ff 100%);
  border-left: 8rpx solid #2196F3;
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tips-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.tips-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.close-tips {
  width: 32rpx;
  height: 32rpx;
}

.tips-content {
  padding-left: 44rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部间距 */
.bottom-space {
  height: 100rpx;
}

/* 动画效果 */
.fade-in {
  animation: fadeInUp 0.6s ease-out;
}

.fade-in:nth-child(2) {
  animation-delay: 0.1s;
}

.fade-in:nth-child(3) {
  animation-delay: 0.2s;
}

.fade-in:nth-child(4) {
  animation-delay: 0.3s;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  text-align: center;
  line-height: 1.6;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .task-content {
    flex-direction: column;
    align-items: flex-start;
    gap: 24rpx;
  }
  
  .task-reward {
    flex-direction: row;
    align-items: center;
    margin-left: 0;
    gap: 24rpx;
  }
  
  .achievement-content {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
}